<h1>To do: {title}</h1>

<hr noshade size="4">

<table width="100%" cellspacing="0" cellpadding="0" border="0">
<tr>
	<td colspan="2">&nbsp;</td>
</tr>
<tr>
	<td class="br">
	<p class="boxtext">{intl-user}:</p>
	{user_name}
	</td>
	<td class="br">
	<p class="boxtext">{intl-owner}:</p>
	{owner_name}
	</td>
</tr>
<tr>
	<td class="br">
	<p class="boxtext">{intl-due}:</p>
	{due}
	</td>
	<td class="br">
	<p class="boxtext">{intl-date}:</p>
	{date}
	</td>
</tr>
<tr>
	<td class="br">
	<p class="boxtext">{intl-category}:</p>
	{category}
	</td>
	<td class="br">
	<p class="boxtext">{intl-priority}:</p>
	{priority}
	</td>
</tr>
<tr>
	<td colspan="2">
	<p class="boxtext">{intl-desc}</p>
	</td>
</tr>
<tr>
	<td class="bglight" colspan="2">{text}</td>
</tr>
<tr>
	<td class="br" colspan="2">&nbsp;</td>
</tr>
<tr>
	<td class="br">
	<p class="boxtext">{intl-status}:</p>
	{status}
	</td>
	<td class="br">
	<p class="boxtext">{intl-permission}:</p>
	{permission}
	</td>
</tr>
</table>

<hr noshade size="4">

<form action="/todo/todolist/"><input class="okbutton" type="submit" value="{intl-back}"></form>
